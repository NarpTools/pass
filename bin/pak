#!/usr/bin/env ruby

require 'fileutils'

command = ARGV[0]
subcommand = ARGV[1]
arg = ARGV[2]

def find_pass_root(start_dir = Dir.pwd)
  current_dir = File.expand_path(start_dir)

  loop do
    return current_dir if Dir.exist?(File.join(current_dir, "pass-root"))

    parent_dir = File.expand_path("..", current_dir)
    break if parent_dir == current_dir  # reached filesystem root

    current_dir = parent_dir
  end

  nil  # not found
end

case command
when 'init'
  FileUtils.mkdir_p(['pak', 'project', 'bin', 'media', 'pass-big', 'pass-root'])
  File.write('pak.conf', "PACKAGE_NAME=\"#{File.basename(Dir.pwd)}\"")
  ['paths.txt', 'install.sh', 'remove.sh', 'update.sh', 'depends.txt'].each do |f|
    FileUtils.touch("project/#{f}")
  end
  FileUtils.touch('pak/ensure.txt')
  system('git rev-parse --is-inside-work-tree > /dev/null 2>&1') || system('git init')
  puts "âœ… New PASS project initialized."

when 'zip'
  unless File.exist?('pak.conf')
    puts "âŒ Not a valid pak project: pak.conf not found."
    exit 1
  end

  pkg_name = File.read('pak.conf')[/PACKAGE_NAME="(.*?)"/, 1]
  pkg_ver = File.read('pak.conf')[/PACKAGE_VERSION="(.*?)"/, 1] || '0.1.0'
  output_name = "#{pkg_name.downcase}-#{pkg_ver}.choco.pkg"

  FileUtils.mkdir_p('.build')
  ['bin', 'media', 'pak.conf', 'pak', 'project'].each do |f|
    FileUtils.cp_r(f, '.build/') if File.exist?(f)
  end

  FileUtils.mkdir_p('archives')
  system("tar -cJf #{output_name} -C .build .")
  FileUtils.mv(output_name, 'archives')
  FileUtils.rm_rf('.build')

  puts "âœ… Package archived: #{output_name}"

when 'module-add'
  module_name = subcommand
  origin = "./#{module_name}"
  target = "./pak/modules/#{module_name}"

  unless File.exist?('pak.conf')
    puts "âŒ Not a valid pak project: pak.conf not found."
    exit 1
  end

  FileUtils.mkdir_p('pak/modules') unless Dir.exist?('pak/modules')

  if Dir.exist?(target)
    puts "âš ï¸ Module #{module_name} already exists at #{target}. Skipping..."
    exit 0
  end

  FileUtils.mv(origin, target)
  puts "âœ… Module #{module_name} has been added."

when 'module-del'
  module_name = subcommand
  target = "./pak/modules/#{module_name}"

  unless File.exist?('pak.conf')
    puts "âŒ Not a valid pak project: pak.conf not found."
    exit 1
  end

  unless Dir.exist?('pak/modules')
    puts "âŒ No modules installed."
    exit 1
  end

  unless Dir.exist?(target)
    puts "âŒ #{module_name} is not installed."
    exit 1
  end

  FileUtils.rm_rf(target)
  puts "âœ… Module #{module_name} has been deleted."

when 'module-list'
  unless File.exist?('pak.conf')
    puts "âŒ Not a valid pak project: pak.conf not found."
    exit 1
  end

  unless Dir.exist?('pak/modules')
    puts "â„¹ï¸ No modules installed."
    exit 0
  end

  puts "ğŸ“¦ Installed modules:"
  puts Dir.entries('pak/modules').select { |f| !f.start_with?('.') }

when 'link'
  if subcommand == 'init'
    remote_url = arg
    if remote_url.nil?
      puts "âŒ No remote repository URL specified."
      puts "ğŸ”— Usage: pak link init <remote-url>"
      exit 1
    end

    unless File.exist?('pak.conf')
      puts "âŒ Not a valid pak project: pak.conf not found."
      exit 1
    end

    system('git rev-parse --is-inside-work-tree > /dev/null 2>&1') || system('git init')
    system("git remote add origin #{remote_url}") || puts("âš ï¸ Remote 'origin' already exists.")
    system('git add .')
    system('git commit -m "Initial commit"') || puts("âš ï¸ Nothing to commit or already committed.")
    system('git branch -M main')
    system('git push -u origin main')
    puts "âœ… Project attached to #{remote_url} and pushed."

  elsif subcommand == 'gh-create'
    repo_name = File.basename(Dir.pwd)
    gh_user = `gh api user`.match(/"login":\s*"(.*?)"/)&.captures&.first

    if gh_user.nil?
      puts "âŒ GitHub CLI not authenticated. Run: gh auth login"
      exit 1
    end

    puts "â³ Creating GitHub repository: #{gh_user}/#{repo_name} ..."
    system("gh repo create #{gh_user}/#{repo_name} --public --source=. --remote=origin --push")
    puts "âœ… GitHub repository created and project pushed."
  end

when 'big'
  if subcommand == 'add'
    pattern = arg
    unless system('command -v git-lfs > /dev/null')
      puts "âŒ Git LFS is not installed. Please install it first."
      exit 1
    end

    puts "ğŸ” Checking Git LFS..."
    system('git lfs install')
    puts "ğŸ“¦ Adding #{pattern} to Git LFS..."
    system("git lfs track \"#{pattern}\"")
    puts "ğŸ“ Updating .gitattributes..."
    system('git add .gitattributes')
    system("git commit -m \"PASS BIG! tracked pattern: #{pattern} via PASS BIG!\"")
    puts "âœ… PASS BIG! tracking added: #{pattern}"
  else
    puts "âŒ Unknown PASS BIG! subcommand. Use: pak big add <pattern>"
  end

when 'commit'
  root = find_pass_root
  unless root
    puts "âŒ Could not find project root (missing pass-root directory)."
    exit 1
  end

  timestamp = Time.now.strftime("%Y-%m-%d %H:%M:%S")
  commitfile = File.join(root, 'pass-root/commit.txt')

  puts "ğŸ“¦ Committing changes to Git..."
  unless system("git commit -m \"Project Update\"")
    puts "âŒ Git commit failed or no changes to commit."
    exit 1
  end

  File.write(commitfile, timestamp)
  puts "ğŸ•’ Commit time saved to #{commitfile}"

end
